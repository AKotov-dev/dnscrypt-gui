[SUMMARY]
summary=GUI for DNSCrypt proxy

[URLCOPY]
urlcopy=https://github.com/AKotov-dev/dnscrypt-gui

[LICENSE]
license=GPLv3

[DEPS]
deps=systemd libcap2-bin libgtk2.0-0

[META]
meta=0

[NOARCH]
noarch=0

[DEB]
deb=1

[FILES]
0=/usr/bin/dnscrypt-gui
1=/usr/share/icons/dnscrypt-gui.png
2=/etc/systemd/user/dnscrypt-proxy.service
3=/usr/share/applications/dnscrypt-gui.desktop
4=/opt/dnscrypt-gui/
5=/usr/share/doc/dnscrypt-gui/

[AFTERINSTALL]
0=#!/bin/bash
1=systemctl daemon-reload >/dev/null 2>&1 || :
2=setcap 'cap_net_bind_service=+ep' /opt/dnscrypt-gui/dnscrypt-proxy 2>/dev/null || :

[AFTERREMOVE]
0=#!/bin/bash
1=systemctl daemon-reload >/dev/null 2>&1 || :
2=setcap -r /opt/dnscrypt-gui/dnscrypt-proxy 2>/dev/null || :

[BEFOREREMOVE]
0=#!/bin/bash
1=if [ $1 -eq 0 ] ; then
2=systemctl disable dnscrypt-proxy.service >/dev/null 2>&1 || :
3=systemctl stop dnscrypt-proxy.service >/dev/null 2>&1 || :
4=fi

[URL32]
url32=https://github.com/AKotov-dev/dnscrypt-gui

[PROGRAMNAME]
programname=DNSCrypt-GUI

[DEVTOOL]
devtool=Lazarus

